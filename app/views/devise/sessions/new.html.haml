.login-section{'data-controller': params[:controller]}
  %h1.wombattleships-header.text-align-center.margin-0-auto.margin-top-110px.animate-in
    =build_blinking_header.html_safe

  .login-wrapper.margin-0-auto{'data-controller': params[:controller], 'data-action': params[:action]}
    .login-form.margin-0-auto
      = form_for(resource, as: @user, url: session_path(@user), html: {id: 'login-form'}) do |f|
        .field
          %br
          = f.email_field :email, autofocus: true, class: 'input', placeholder: 'email'
        .field
          %br
          = f.password_field :password, autocomplete: 'off', class: 'input', placeholder: 'password'
        - if devise_mapping.rememberable?
          .field.remember
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit 'Log in', class: 'main-btn inconsolata-font', id: 'login-btn'
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to 'Sign up', new_registration_path(@user), class: 'main-btn display-inline', id: 'signup-btn'
          = link_to fa_icon_tag('twitter') + " Twitter Sign In", user_omniauth_authorize_path(:twitter), class: 'main-btn display-inline', id: 'twitter-btn'
